<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/list_profile_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            />
        <!-- android:background="@color/tw__composer_red" -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="0dp" >

            <TextView
                android:id="@+id/list_real_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="17sp"
                android:text="Real Name"/>

            <TextView
                android:id="@+id/list_user_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="17sp"
                android:layout_marginTop="0sp"
                android:text="UserName"/>

        </LinearLayout>

        <!-- This magical view makes everythnig work. Reminder to ask Jeff why. -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/list_goto_map"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:background="@drawable/worldwide_location"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <!-- <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <size
            android:height="1dp" />
        <solid android:color="#ff992900" />
    </shape> -->

</LinearLayout>