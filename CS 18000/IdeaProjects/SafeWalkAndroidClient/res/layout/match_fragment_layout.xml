<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.purdue.hughe127.MainActivity" android:id="@+id/SafeWalkClient">

    <!-- TODO your layout here -->

    <Button
        android:id="@+id/bu_start_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="60dp"
        android:minWidth="150dp"
        android:padding="@dimen/padding"
        android:background="@color/salmon"
        android:text="@string/start_over"
        android:textColor="@color/white" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Waiting for Match..."
            android:id="@+id/Congrats" android:layout_above="@+id/bu_start_over"
            android:layout_centerHorizontal="true" android:layout_marginBottom="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To:"
            android:id="@+id/textView"
            android:layout_above="@+id/Congrats"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/Congrats" android:layout_toStartOf="@+id/Congrats"
            android:layout_marginBottom="10dp" android:textSize="@dimen/text_size_medium"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: "
            android:id="@+id/textView2" android:layout_above="@+id/textView" android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/text_size_medium"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting..."
            android:id="@+id/partnerDest"
            android:textSize="@dimen/text_size_medium"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting..."
            android:id="@+id/partnerOrig"
            android:textSize="@dimen/text_size_medium"
            android:layout_below="@+id/textView5" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person: "
            android:id="@+id/textView5"
            android:layout_above="@+id/textView2" android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true" android:textSize="@dimen/text_size_medium"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting..."
            android:id="@+id/partnerName"
            android:layout_above="@+id/partnerOrig"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true" android:textSize="@dimen/text_size_medium"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/log"
            android:layout_alignParentTop="true" android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" android:layout_above="@+id/textView5"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"/>

</RelativeLayout>